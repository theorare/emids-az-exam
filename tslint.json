{
  "rules": {
    "align": {
      "options": [
        "parameters"
      ]
    },
    "array-type": false,
    "arrow-return-shorthand": false,
    "curly": false,
    "component-class-suffix": true,
    "contextual-lifecycle": true,
    "directive-class-suffix": false,
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "kebab-case"
    ],
    "eofline": false,
    "import-blacklist": [
      false,
      "rxjs/Rx"
    ],
    "import-spacing": true,
    "max-classes-per-file": false,
    "max-line-length": [
      true,
      140
    ],
    "no-empty": false,
    "no-inferrable-types": [
      false,
      "ignore-params"
    ],
    "no-non-null-assertion": false,
    "no-redundant-jsdoc": true,
    "no-switch-case-fall-through": true,
    "no-var-requires": false,
    "object-literal-key-quotes": [
      false
    ],
    "quotemark": [
      false,
      "single"
    ],
    "semicolon": {
      "options": [
        "always"
      ]
    },
    "space-before-function-paren": {
      "options": {
        "anonymous": "never",
        "asyncArrow": "never",
        "constructor": "never",
        "method": "never",
        "named": "never"
      }
    },
    "typedef": [
      false,
      "call-signature"
    ],
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-pascal-case"
      ]
    },
    "no-conflicting-lifecycle": true,
    "no-host-metadata-property": true,
    "no-input-rename": true,
    "no-inputs-metadata-property": false,
    "no-output-native": true,
    "no-output-on-prefix": false,
    "no-output-rename": true,
    "no-outputs-metadata-property": false,
    "template-banana-in-box": false,
    "template-no-negated-async": false,
    "use-lifecycle-interface": false,
    "use-pipe-transform-interface": true
  },
  "rulesDirectory": [
    "codelyzer"
  ]
}